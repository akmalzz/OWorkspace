package com.psl.prob4;

public class Prob4 
{

	static double calTax(int gp)
	{
		double taxOwed = 0.0;
		
		if(gp>0 && gp<=240)
			taxOwed = 0 * gp;
		else if(gp>0 && gp<480)
			taxOwed = 0.15 * gp;
		else if(gp > 0 && gp>=480)
			taxOwed = 0.28 * gp;
		
		return taxOwed;
	}
	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		System.out.println("Tax owed for Gross Pay 143 is : " + calTax(143));
	}

}
